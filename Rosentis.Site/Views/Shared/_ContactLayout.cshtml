							</ul>
						</div>
					</div>
					<!-- PAGES MENU END -->
					<div class="banner"><a href="#"><img src=@Url.Content("~/Vendor/img/banner.jpg") alt="sales 2014" class="img-fluid"></a></div>
				</div>
				<div class="col-lg-9">
					<div id="contact" class="box text-right">
						@RenderBody()
					</div>
				</div>
				<!-- /.col-md-9-->

			</div>
		</div>
	</div>
</div>

