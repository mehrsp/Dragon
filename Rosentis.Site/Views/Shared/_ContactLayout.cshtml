	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeadContent
{
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.4.0/leaflet.css">
}
@section Scripts
{
	<script src="@Url.Content("~/Scripts/map.js")"></script>
}
<div id="all">
